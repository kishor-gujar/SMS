@model WebApplication2.Models.MessageViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("SendMessage", "Contact", FormMethod.Post, new { onsubmit = "return SubmitSendMessage(this)" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Message, new { @class = "control-label" }) <br />
        @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } }) <br />
        @Html.ValidationMessageFor(model => model.Message)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-default" />
    </div>
}